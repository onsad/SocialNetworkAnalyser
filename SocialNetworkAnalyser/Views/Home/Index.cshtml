@{
    ViewData["Title"] = "Social network analyser";
}
@model IEnumerable<SocialNetworkAnalyser.Entitites.SocialNetworkAnalysis>

<h3 class="display-4">Social network analyser</h3>

<div class="text-center">
    <table>
        <tr>
            <th style="width: 20%">
                @Html.DisplayNameFor(model => model.NameOfAnalysis)
            </th>
            <th style="width: 30%">
                @Html.DisplayNameFor(model => model.CountOfUsers)
            </th>
            <th style="width: 30%">
                @Html.DisplayNameFor(model => model.AverageCountOfConnectedUsers)
            </th>
            <th style="width: 20%">
                @Html.DisplayNameFor(model => model.FileName)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NameOfAnalysis)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CountOfUsers)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AverageCountOfConnectedUsers)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FileName)
                </td>
                @* <td>
                    @Html.ActionLink("Detail", "Detail", new { id = item.Id })
                </td> *@
            </tr>
        }
        </table>
</div>
